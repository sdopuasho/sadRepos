<Page x:Class="AccountigConsumable.AutherizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountigConsumable"
      mc:Ignorable="d" 
       d:DesignHeight="132" d:DesignWidth="268"
      Title="AutherizationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Auten"
                             Background="white" Width="150"  Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Content="Проверить" Width="150" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2">

            <Label x:Name="lbltxt" Content="Повтор письма:" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" MouseEnter="lbltxt_MouseEnter"/>
            <Label x:Name="lbl" Content="600"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" />
        </StackPanel>
    </Grid>
</Page>
